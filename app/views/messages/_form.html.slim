div.well
  = simple_form_for([@emergency, @message]) do |f|
    = f.input :text, rows: 3
    - if message_policy(@message).user_can_close_emergency?
      = f.input :claim_closed, as: :boolean, class: 'btn btn-primary'
    = f.button :submit

javascript:
  $('#message_text').froalaEditor({
    paragraphFormat: {
      N: 'Normal',
      H5: 'Heading',
      PRE: 'Code'
    },
    pastePlain: true
  })
